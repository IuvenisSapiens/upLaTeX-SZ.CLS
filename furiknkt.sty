    \KANAktS{#1}{#1}{\dimen1}{#3}{#4}%
   \else
    \ifdim\dimen0<2.2zw%親文字3文字，ルビ2文字
    \dimen1=#1\relax \advance\dimen1 by-.5zw
    \KANAktS{#1}{#1}{\dimen1}{#3}{#4}%
   \else %親文字3文字，ルビ1文字
    \dimen1=#1\relax \advance\dimen1 by-1zw
    \KANA{#1}{#1}{\dimen1}{#3}{#4}%
